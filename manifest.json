{
  "manifest_version": 3,
  "name": "Color Picker",
  "description": "You can easily obtain the color Hex or RGB of any element on the screen, whether it's text, images, buttons, or backgrounds.",
  "version": "0.0.1",
  "permissions": [],
  "action": {
    "default_icon": "./icons/ZeGotinhaPintor-128.png",
    "default_popup": "./popup/popup.html"
  },
  "icons": {
    "16": "./icons/ZeGotinhaPintor-16.png",
    "24": "./icons/ZeGotinhaPintor-24.png",
    "32": "./icons/ZeGotinhaPintor-32.png",
    "48": "./icons/ZeGotinhaPintor-48.png",
    "128": "./icons/ZeGotinhaPintor-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
