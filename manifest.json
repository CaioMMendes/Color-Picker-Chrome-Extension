{
  "manifest_version": 3,
  "name": "Color Picker",
  "description": "You can easily obtain the color Hex or RGB of any element on the screen, whether it's text, images, buttons, or backgrounds.",
  "version": "0.1.0",
  "permissions": [],
  "action": {
    "default_icon": "./icons/color-picker-128.png",
    "default_popup": "./popup/popup.html"
  },
  "icons": {
    "16": "./icons/color-picker-16.png",
    "24": "./icons/color-picker-24.png",
    "32": "./icons/color-picker-32.png",
    "48": "./icons/color-picker-48.png",
    "128": "./icons/color-picker-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://127.0.0.1:5500/popup/popup.html"],
      "js": ["content.js"]
    }
  ]
}
